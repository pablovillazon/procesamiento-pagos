# Build stage
FROM node:22-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

RUN npx prisma generate
RUN npm run build

# Production stage
FROM node:22-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY prisma ./prisma

COPY --from=builder /app/dist ./dist
COPY .env .env

RUN npx prisma generate

EXPOSE 3000

CMD ["node", "dist/main"]