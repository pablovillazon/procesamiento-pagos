datasource db {
  provider = "postgresql"
}

generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["omitApi"]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  OPERATOR
  CASHIER
}
